{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "machineLearningApiVersion": {
            "defaultValue": "2021-10-01",
            "type": "String"
        },
        "redisCacheApiVersion": {
            "defaultValue": "2020-12-01",
            "type": "String"
        },
        "location": {
            "type": "String"
        },
        "workspaceName": {
            "type": "String",
            "metadata": {
                "description": "Specifies the name of the Azure Machine Learning workspace."
            }
        },
        "onlineEndpointDescription": {
            "defaultValue": "This is an online endpoint created by an ARM template",
            "type": "String"
        },
        "onlineEndpointTags": {
            "defaultValue": {},
            "type": "Object"
        },
        "authMode": {
            "allowedValues": [
                "AMLToken",
                "Key",
                "AADToken"
            ],
            "type": "String"
        },
        "redisHost": {
            "defaultValue": "jenns.redis.cache.windows.net",
            "type": "String"
        },
        "redisCacheName": {
            "defaultValue": "jenns",
            "type": "String"
        },
        "instanceType": {
            "defaultValue": "Standard_F2s_v2",
            "type": "String"
        },
        "onlineEndpointName": {
            "defaultValue": "myEndpointName",
            "type": "String"
        },
        "deploymentName": {
            "defaultValue": "myDeploymentName",
            "type": "String"
        },
        "model": {
            "defaultValue": "azureml://feeds/openai/models/davinci/versions/1.0",
            "type": "String"
        }
    },
    "variables": {
        "redisCacheResourceId": "[resourceId('Microsoft.Cache/Redis', parameters('redisCacheName'))]",
        "redisSuffix": "redis.cache.windows.net",
        "redisHostWithSuffix": "[parameters('redisHost')]",
        "AZUREML_OAI_REDIS_HOST_VALUE": "[if(endsWith(parameters('redisHost'), variables('redisSuffix')), parameters('redisHost'), variables('redisHostWithSuffix'))]"
    },
    "resources": [
        {
            "type": "Microsoft.MachineLearningServices/workspaces/onlineEndpoints",
            "apiVersion": "[parameters('machineLearningApiVersion')]",
            "name": "[concat(parameters('workspaceName'), '/', parameters('onlineEndpointName'))]",
            "location": "[parameters('location')]",
            "tags": "[parameters('onlineEndpointTags')]",
            "properties": {
                "authMode": "[parameters('authMode')]",
                "description": "[parameters('onlineEndpointDescription')]",
                "properties": {},
                "traffic": {
                    "[parameters('deploymentName')]": 100
                }
            }
        },
        {
            "type": "Microsoft.MachineLearningServices/workspaces/onlineEndpoints/deployments",
            "apiVersion": "[parameters('machineLearningApiVersion')]",
            "name": "[concat(parameters('workspaceName'), '/', parameters('onlineEndpointName'), '/', parameters('deploymentName'))]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[parameters('onlineEndpointName')]"
            ],
            "sku": {
                "name": "Default",
                "capacity": 1
            },
            "kind": "Managed",
            "identity": {
                "type": "None"
            },
            "properties": {
                "endpointComputeType": "Managed",
                "model": "[parameters('model')]",
                "instanceType": "[parameters('instanceType')]",
                "properties": {
                    "AZUREML_OAI_REDIS_HOST": "[variables('AZUREML_OAI_REDIS_HOST_VALUE')]",
                    "AZUREML_OAI_REDIS_KEY": "[listKeys(variables('redisCacheResourceId'), parameters('redisCacheApiVersion')).primaryKey]"
                },
                "scaleSettings": {
                    "ScaleType": "Default"
                }
            }
        }
    ]
}
